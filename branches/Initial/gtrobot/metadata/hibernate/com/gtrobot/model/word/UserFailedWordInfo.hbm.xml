<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class table="USER_FAILED_WORD_INFO" name="com.gtrobot.model.word.UserFailedWordInfo">
    <composite-id class="com.gtrobot.model.word.UserFailedWordInfoKey" access="property" name="pk">
      <key-property column="USER_ENTRY_ID" access="property" name="userId"/>
      <key-many-to-one class="com.gtrobot.model.word.WordUnit" column="WORD_UNIT_ID" access="property" name="wordUnit"/>
      <key-many-to-one class="com.gtrobot.model.word.WordEntry" column="WORD_ENTRY_ID" access="property" name="wordEntry"/>
    </composite-id>
    <property name="failedCounts" not-null="true" access="property" column="FAILED_COUNTS"/>
    <property name="studiedTimes" not-null="true" access="property" column="STUDIED_TIMES"/>
    <property name="lastStudied" not-null="true" access="property" column="LAST_STUDIED"/>
  </class>
</hibernate-mapping>
